<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hamaianh.online.com"
    android:versionCode="14"
    android:versionName="1.8.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <supports-screens android:normalScreens="true" android:smallScreens="true" android:largeScreens="true" android:resizeable="true" android:anyDensity="true" android:xlargeScreens="true"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:icon="@drawable/images"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".activities.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".activities.HighScoreActivity"/>
        <activity
            android:name=".activities.SettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.AdvancedSettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/pref_category_advanced" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:icon="@drawable/images"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        
