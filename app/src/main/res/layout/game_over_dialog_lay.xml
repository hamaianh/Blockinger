<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <tetris.com.customview.TetrisTextView
        android:id="@+id/gameover_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10_dim"
        android:text="@string/defeatDialogTitle"
        android:textColor="@android:color/white"
        app:fontSize="300"
        app:fontTypeFaceName="@string/font_game_over_str" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_game_dra"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_20_dim">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_score_lay_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical">

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_score_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_title"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:fontSize="130"
                    app:fontTypeFaceName="@string/font_game_over_str" />

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_score_point_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:fontSize="120"
                    app:fontTypeFaceName="@string/font_game_over_str" />

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_apm_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10_dim"
                    android:text="@string/apmLabel"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:fontSize="130"
                    app:fontTypeFaceName="@string/font_game_over_str" />

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_apm_point_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:fontSize="120"
                    app:fontTypeFaceName="@string/font_game_over_str" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/layout_score_lay_id"
                android:orientation="vertical">

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_time_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_title"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:fontSize="130"
                    app:fontTypeFaceName="@string/font_game_over_str" />

                <tetris.com.customview.TetrisTextView
                    android:id="@+id/gameover_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5_dim"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:fontSize="120"
                    app:fontTypeFaceName="@string/font_game_over_str" />
            </LinearLayout>
        </RelativeLayout>

        <tetris.com.customview.TetrisButton
            android:id="@+id/gameover_back_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15_dim"
            android:background="@drawable/common_button_dra"
            android:paddingBottom="@dimen/margin_10_dim"
            android:paddingLeft="@dimen/margin_25_dim"
            android:paddingRight="@dimen/margin_25_dim"
            android:paddingTop="@dimen/margin_10_dim"
            android:text="@string/menu_replay"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:fontSize="140"
            app:fontTypeFaceName="@string/font_game_over_str" />
    </LinearLayout>
</LinearLayout>